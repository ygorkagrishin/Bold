.hero
    background-color: primaryGrey
.hero__main
    display: table
    height: 100vh
.hero__title
    display: table-cell
    vertical-align: middle
    font: 100px / 120px mainTitle
    letter-spacing: -4px;
    word-spacing: 18px;


.feat__row
    clearfix()
    .feat__col
        &:not(:last-child)
            margin-right: 20px
.feat__col
    float: left
    max-width: 300px
    padding-bottom: 71px
    &::before
        display: block
        height: 2px
        background-color: primaryBlack    
        content: ''
.feat__title
    margin-bottom: 14px



.port__title
    borderTop()
.port__list
    padding: 2px 0 74px 0 
    clearfix()
    .port__item
        &:not(:last-child)
            margin-right: 20px
.port__item
    position: relative
    float: left
    width: 100%
    max-width 220px
    height: 176px
    overflow: hidden
    img 
        transform: translate(-25%, -25%)
.port__hover
    position: absolute
    top: 0
    left: 0
    display: none
    width: 100%
    height: 100%
    background-color: rgba(primaryBlack,.9)
.port__desc
    display: table-cell
    vertical-align: middle
    text-align: center
    img 
        width: 26px;
        height: 26px;
        vertical-align: bottom;
    .port__name
        display: inline-block
        margin: 0
        font-size: 18px
        color: #fff
.port__item
    &:hover,&.is-active
        .port__hover
            display: table



.posts__title
    borderTop()
.posts__row
    clearfix()
    .posts__col
        &:not(:last-child)
            margin-right: 20px
.posts__col 
    float: left
    max-width: 220px
    padding-bottom: 72px
    h3
        margin-bottom: 17px
        font-size: 18px
        line-height: 20px
        text-transform: uppercase
        &::after
            display: block
            height: 2px
            margin-top: 10px 
            background-color: primaryBlack    
            content: ''
.posts__cont
    margin-bottom: 20px
.posts__more
    font-family: fontBaseBold



.footer__row
    padding: 36px 0
    border-top: 4px solid primaryBlack
    clearfix()
    .footer__col
        &:not(:last-child)
            margin-right: 20px
.footer__col
    float: left
    width: 300px
    h3
        margin-bottom: 16px
        font-size: 18px
        word-spacing: 1px
        text-transform: uppercase
.footer__social
    max-width 135px
    padding-top: 17px
    li
        display: inline-block
        width: 30px
        vertical-align: middle
    a
        display: inline-block
    img 
        max-width 100%
    