clearfix()
    &::after
        content: ''
        display: block
        clear: both

borderTop()
    border-top: 1px solid primaryBlack
buttonReset()
    border none
    margin 0
    padding 0
    width auto
    overflow visible
    background transparent
    color inherit
    font inherit
    line-height normal
    -webkit-font-smoothing inherit
    -moz-osx-font-smoothing inherit
    -webkit-appearance none