.nav
    li
        position: relative
        display: inline-block
        padding: 6px 0
        vertical-align: middle
        &:hover
            &::before
                position: absolute
                top: 0
                left: 0
                width: 100%
                height: 3px
                background-color: primaryBlack 
                content: ''
            a
                color: #fff
        &:not(:last-child)
            margin-right: 22px

    a
        font: 24px / 1 fontSectTitle
        text-transform: uppercase 
.nav__list
    border-top: 1px solid primaryBlack
    border-bottom: 1px solid primaryBlack