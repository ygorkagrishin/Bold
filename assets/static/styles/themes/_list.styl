.port__list
    padding: .125em 0 4.625em 0 // 2px 0 74px 0 
    clearfix()
    .port__item
        &:not(:last-child)
            margin-right: 1.25em //20px
            @media screen and (max-width: 800px)
                margin: 0
.port__item
    position: relative
    float: left
    width: 100%
    max-width 13.75em // 220px
    height: 11em // 176px
    overflow: hidden
    img 
        transform: translate(-25%, -25%)
        @media screen and (max-width: 800px)
            transform: translate(0,0)
        @media screen and (max-width: 480px)
            width 100%
    @media screen and (max-width: 800px)
        max-width 49%
        height: 17em
        margin: .5% !important
    @media screen and (max-width: 480px)
        max-width 100%
        margin: 0 0 1% 0 !important
.port__hover
    position: absolute
    top: 0
    left: 0
    display: none
    width: 100%
    height: 100%
    background-color: rgba(primaryBlack,.9)
.port__desc
    display: table-cell
    vertical-align: middle
    text-align: center
    img 
        width: 1.625em //26px
        height: 1.625em //26px
        vertical-align: bottom
.port__name
    display: inline-block
    margin: 0
    font-size: 1.125em // 18px
    color: #fff
    @media screen and (max-width: 480px)
        font-size: 1.5em
.port__item
    &:hover,&.is-active
        .port__hover
            display: table